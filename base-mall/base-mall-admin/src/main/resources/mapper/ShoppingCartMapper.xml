<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.joolun.cloud.mall.admin.mapper.ShoppingCartMapper">

	<resultMap id="shoppingCartMap" type="com.joolun.cloud.mall.common.entity.ShoppingCart">
		<id property="id" column="id"/>
		<result property="tenantId" column="tenant_id"/>
		<result property="delFlag" column="del_flag"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
		<result property="userId" column="user_id"/>
		<result property="spuId" column="spu_id"/>
		<result property="skuId" column="sku_id"/>
		<result property="quantity" column="quantity"/>
		<result property="addPrice" column="add_price"/>
		<result property="spuName" column="spu_name"/>
		<result property="specInfo" column="spec_info"/>
		<result property="picUrl" column="pic_url"/>
	</resultMap>
	<resultMap id="shoppingCartMap2" extends="shoppingCartMap" type="com.joolun.cloud.mall.common.entity.ShoppingCart">
		<collection property="goodsSpu" ofType="com.joolun.cloud.mall.common.entity.GoodsSpu"
					select="com.joolun.cloud.mall.admin.mapper.GoodsSpuMapper.selectOneByShoppingCart"
					column="{id=spu_id}">
		</collection>
		<collection property="goodsSku" ofType="com.joolun.cloud.mall.common.entity.GoodsSku"
					select="com.joolun.cloud.mall.admin.mapper.GoodsSkuMapper.selectOneByShoppingCart"
					column="{id=sku_id}">
		</collection>
		<collection property="specs" ofType="com.joolun.cloud.mall.common.entity.GoodsSkuSpecValue"
					select="com.joolun.cloud.mall.admin.mapper.GoodsSkuSpecValueMapper.listGoodsSkuSpecValueBySkuId"
					column="{skuId=sku_id}">
		</collection>
	</resultMap>

	<sql id="shoppingCartSql2">
		obj.`id`,
		obj.`tenant_id`,
		obj.`del_flag`,
		obj.`create_time`,
		obj.`update_time`,
		obj.`user_id`,
		obj.`spu_id`,
		obj.`sku_id`,
		obj.`quantity`,
		obj.`add_price`,
		obj.`spu_name`,
		obj.`spec_info`,
		obj.`pic_url`
	</sql>


	<select id="selectPage2" resultMap="shoppingCartMap2">
		SELECT
			<include refid="shoppingCartSql2"/>
		FROM shopping_cart obj
		<where>
			<if test="query.userId != null and query.userId != ''">
				and obj.`user_id` = #{query.userId}
			</if>
		</where>
	</select>
</mapper>
